{
  "name": "tiddly-mcp",
  "description": "Model Context Protocol (MCP) server for TiddlyWiki - enables AI assistants to interact with your wiki.",
  "homepage": "https://github.com/rryan/tiddly-mcp/",
  "keywords": [
    "node",
    "tiddlywiki"
  ],
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "dev": "tiddlywiki-plugin-dev dev",
    "dev:lan": "tiddlywiki-plugin-dev dev --lan",
    "dev:wiki": "tiddlywiki-plugin-dev dev --write-wiki",
    "test": "tsx run-tests.js",
    "build": "npm run clean && tiddlywiki-plugin-dev build",
    "lint": "eslint ./src --ext js,ts,tsx,json",
    "lint:fix": "eslint ./src --ext ts,tsx,json --fix",
    "check": "tsc --noEmit --skipLibCheck",
    "publish": "npm run clean && tiddlywiki-plugin-dev publish",
    "reset": "rimraf ./**/node_modules",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "update": "npm-check-updates -u && dprint config update",
    "new": "tiddlywiki-plugin-dev new",
    "build:library": "npm run clean && tiddlywiki-plugin-dev build --library --output dist/library",
    "build:folder": "npm run clean && tiddlywiki-plugin-dev build && node convert-to-folder.mjs",
    "build:release": "npm run clean && tiddlywiki-plugin-dev build && node convert-to-folder.mjs && cd dist && cp \\$__plugins_rryan_tiddly-mcp.json tiddly-mcp.json && tar czf tiddly-mcp.tar.gz tiddly-mcp",
    "publish:offline": "npm run clean && tiddlywiki-plugin-dev publish --offline"
  },
  "engines": {
    "node": ">=20"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  },
  "devDependencies": {
    "@modern-js/tsconfig": "^2.69.6",
    "@types/jasmine": "^5.1.13",
    "@types/node": "^25.0.3",
    "dprint": "^0.51.1",
    "eslint-config-tidgi": "^2.2.0",
    "husky": "^9.1.7",
    "jasmine": "^5.13.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "tw5-typed": "^1.1.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "npm-check-updates": "^19.2.0",
    "tiddlywiki": "^5.3.8",
    "tiddlywiki-plugin-dev": "^0.3.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.1"
  }
}
